<table class="table caption-top">
  <caption>
  </caption>
  <thead>
    <tr >
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Post</th>
      <th scope="col" colspan="4">Last Update</th>
    </tr>
  </thead>
  <tbody>
    {{#each values}}
    <tr>
      <th scope="row">{{sum @index 1 }}</th>
      <td>{{ this.title }}</td>
      <td>{{ this.post }}</td>
      <td>{{ this.updatedAt }}</td>
      <td>
        <a href="{{this._id}}/edit">Edit</a>
      </td>
      <td>
        <a href="#" data-toggle="modal" data-target="#delete">Remove</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<!-- Modal confirm to delete  -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mx-auto" id="exampleModalLabel">U SURE?</h5>
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>
<script>
  window.onload = event =>{
    $('#delete').on('shown.bs.modal', function () {
      alert()
    })
  }
</script>