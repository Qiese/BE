<div class="row">
    {{#each posts}}
    <div class="col-lg-6">
        <div class="">
            <a href="/news/detail/{{this.slug}}">
                <img src="{{this.img}}" alt="{{this.title}}">
            </a>
        </div>
        <a href="/news/detail/{{this.slug}}">
            <h1>{{this.title}}</h1>
        </a>
    </div>
    {{/each}}
</div>